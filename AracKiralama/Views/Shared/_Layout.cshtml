    @await RenderSectionAsync("Scripts", required: false)

    <script>
    function openPaketlerModal(paketTipi) {
        var paketlerModal = new bootstrap.Modal(document.getElementById('paketlerModal'));
        var rezervasyonModal = bootstrap.Modal.getInstance(document.getElementById('rezervasyonModal'));
        
        if (rezervasyonModal) {
            rezervasyonModal.hide();
        }
        
        setTimeout(() => {
            paketlerModal.show();
            const element = document.querySelector([data-paket="${paketTipi}"]);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth', block: 'center' });
                element.classList.add('highlight-card');
            }
        }, 300);
    }

    function paketEkle(paketTipi) {
        // Kullanıcı giriş yapmış mı kontrol et
        if (!@(User.Identity?.IsAuthenticated.ToString().ToLower() ?? "false")) {
            window.location.href = '/Hesap/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
            return;
        }

        // Önce araçları sayfasına yönlendir
        window.location.href = '/Arac';
    }

    // CSRF token için yardımcı fonksiyon
    function getAntiForgeryToken() {
        return document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    }

    // Sepete ekleme işlemi için yeni fonksiyon
    async function sepeteEkle(aracId, paketTipi) {
        try {
            const token = getAntiForgeryToken();
            const baslangicTarihi = new Date();
            let bitisTarihi;

            // Paket tipine göre bitiş tarihini ayarla
            switch (paketTipi) {
                case 'ekonomik':
                    bitisTarihi = new Date(baslangicTarihi);
                    bitisTarihi.setDate(bitisTarihi.getDate() + 3);
                    break;
                case 'konfor':
                    bitisTarihi = new Date(baslangicTarihi);
                    bitisTarihi.setDate(bitisTarihi.getDate() + 5);
                    break;
                case 'premium':
                    bitisTarihi = new Date(baslangicTarihi);
                    bitisTarihi.setDate(bitisTarihi.getDate() + 7);
                    break;
                default:
                    bitisTarihi = new Date(baslangicTarihi);
                    bitisTarihi.setDate(bitisTarihi.getDate() + 1);
            }

            const response = await fetch('/Sepet/SepeteEkle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({
                    aracId: aracId,
                    baslangic: baslangicTarihi.toISOString(),
                    bitis: bitisTarihi.toISOString(),
                    paketTipi: paketTipi
                })
            });

            if (!response.ok) {
                throw new Error('Sepete ekleme işlemi başarısız oldu');
            }

            const result = await response.json();
            if (result.success) {
                // Bootstrap modalını kapat
                const modal = bootstrap.Modal.getInstance(document.getElementById('paketlerModal'));
                if (modal) {
                    modal.hide();
                }

                // Başarılı mesajı göster
                alert('Paket başarıyla sepete eklendi');
                window.location.href = '/Sepet/Index';
            }
        } catch (error) {
            console.error('Hata:', error);
            alert('Bir hata oluştu: ' + error.message);
        }
    }
    </script>
